{
  "name": "tararau-bot",
  "version": "2.0.0",
  "description": "A Telegram Chatbot capable of doing tararau stuff",
  "main": "app.ts",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "docker:up": "docker-compose up -d && yarn push",
    "docker:down": "docker-compose down",
    "postinstall": "tsc",
    "generate": "prisma generate",
    "seed": "prisma db seed",
    "push": "prisma db push --force-reset --accept-data-loss",
    "reset": "prisma migrate reset -f --skip-seed",
    "migrate": "prisma migrate dev",
    "start": "cross-env NODE_ENV=production node dist/src/app.js",
    "dev": "yarn docker:up && ts-node-dev --inspect --transpile-only --ignore-watch node_modules -r dotenv/config --respawn src/app.ts dotenv_config_path=.env.development",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "chatbot",
    "chatbot-telegram",
    "tararau"
  ],
  "author": "Ahavaz",
  "license": "MIT",
  "engines": {
    "node": "14.*",
    "yarn": "1.*"
  },
  "dependencies": {
    "@prisma/client": "^3.2.1",
    "axios": "^0.21.4",
    "consign": "^0.1.6",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "express": "^4.17.3",
    "node-schedule": "^2.0.0",
    "node-telegram-bot-api": "^0.54.0",
    "ts-node": "^10.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^15.0.0",
    "@types/node-telegram-bot-api": "^0.51.4",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "prisma": "^3.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  }
}
